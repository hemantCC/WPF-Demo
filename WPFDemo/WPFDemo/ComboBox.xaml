<Window x:Class="WPFDemo.ComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="ComboBox" Height="450" Width="800">
    <StackPanel>
        <ComboBox Name="MyCombobox" Width="300" Margin="40" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                    <Rectangle Height="25" Width="25" Fill="{Binding Name}" />
                        <TextBlock Text="{Binding Name}" FontFamily="segoe ui light" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <!--<Label Background="{Binding Selected}"  Height="200" Width="500" Margin="5"/>-->
        <Button Content="Go Back" Height="30" FontFamily="segoe ui light"  Width="120" Click="Button_Click" Margin="5" />

    </StackPanel>
</Window>
