<Window x:Class="WPFDemo.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label Content="Username :" />
        <TextBox Height="25" />
        <Label Content="Password :" />
        <PasswordBox MaxLength="8" PasswordChar="*" Height="25" />
        <DockPanel HorizontalAlignment="Center">
            <Button Width="250" Height="28" Margin="0 10 0 0" HorizontalAlignment="Center"  Content="Login" Click="Button_Click" Background="DarkOliveGreen" Foreground="White" />
        <Button Width="250" Height="28" Margin="0 10 0 0"  Content="Home" Background="IndianRed" Foreground="White" Click="Button_Click_1" />
        </DockPanel>
    </StackPanel>
</Window>
